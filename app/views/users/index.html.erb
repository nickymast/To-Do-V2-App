<p id="notice"><%= notice %></p>

<h1>Listing Users</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><button type="button" class="btn btn-info"><%= link_to 'Show', user %></td></button>
        <td><button type="button" class="btn btn-info"><%= link_to 'Edit', edit_user_path(user) %></td></button>
        <td><button type="button" class="btn btn-info"><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td></button>
      </tr>
    <% end %>
  </tbody>
</table>

