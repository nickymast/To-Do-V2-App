<p id="notice"><%= notice %></p>

<h1>Listing Projects</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Title</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.title %></td>
        <td><%= project.user.name %></td>
        <td><button type="button" class="btn btn-info"><%= link_to 'Show', project %></td></button>
        <td><button type="button" class="btn btn-info"><%= link_to 'Edit', edit_project_path(project) %></td></button>
        <td><button type="button" class="btn btn-info"><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td></button>
      </tr>
    <% end %>
  </tbody>
</table>

